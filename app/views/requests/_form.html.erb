<%= form_with(model: request, scope: :request, class: "request-form" ) do |form| %>
  <fieldset>
    <legend>Contact Information</legend>
    <%= form.text_field :name, placeholder: "Full name" %>
    <%= form.email_field :email, placeholder: "email@example.com" %>
    <%= form.telephone_field :phone, placeholder: "Phone number" %>
  </fieldset>

  <fieldset>
    <legend>Address</legend>
    <%= form.text_field :address_line_1, label: "Address Line 1", placeholder: "Street address" %>
    <%= form.text_field :address_line_2, label: "Address Line 2", placeholder: "Apartment, suite, etc. (optional)" %>
    <%= form.text_field :city, placeholder: "City" %>
  </fieldset>

  <fieldset>
    <legend>Schedule</legend>
    <%= form.date_field :pick_up_at, label: "Pick Up Date", min: Request.earliest_pick_up_date, onclick: "this.showPicker()" %>
    <div class="form-notice">
      <strong>Good news:</strong> Pick up is scheduled between 18:00 and 20:30, after normal working hours, so you don't have to worry about being home during the day.
    </div>
  </fieldset>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
