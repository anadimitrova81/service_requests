<% content_for(:title) { "Admin Login" } %>

<div class="container">
  <div class="login-card">
    <h1 class="login-title">Admin Login</h1>

    <%= form_with url: login_path, method: :post, class: "login-form" do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control", placeholder: "admin@example.com", autofocus: true, skip_group: true %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "Password", skip_group: true %>
      </div>

      <%= form.submit "Log in", class: "btn btn-primary btn-full" %>
    <% end %>
  </div>
</div>
